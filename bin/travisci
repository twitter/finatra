#!/bin/bash

set -xe

SCALA_VERSION=${TRAVIS_SCALA_VERSION:-2.11.7}

function retry {
  local n=$1; shift
  local f=$@
  local counter=0

  while [ $counter -lt $n ]; do
    if $f; then break; fi
    let counter=counter+1
  done
}

function git_get_repo {
  local repo_name=$1
  git clone https://github.com/twitter/$repo_name.git --branch develop --depth 1
}

function sbt_run {
  $PROJECT_SBT ++$SCALA_VERSION $1
}

function sbt_publish_local {
  sbt_run publishLocal
}

function sbt_publish_project_local {
  local project_name=$1
  sbt_run $project_name/publishLocal
}

function sbt_update {
  sbt_run update
}

function sbt_update_project {
  local project_name=$1
  sbt_run $project_name/update
}

function dependency {
  local repo_name=$1
  cd $PROJECT_TMP_DIR
  git_get_repo $repo_name
  cd $repo_name
  retry 2 sbt_update
  sbt_publish_local
}

function project_dependency {
  local repo_name=$1
  local project_name=$2
  cd $PROJECT_TMP_DIR
  git_get_repo $repo_name
  cd $repo_name
  retry 2 sbt_update_project $project_name
  sbt_publish_project_local $project_name
}

function clean_up {
  rm -rf $PROJECT_TMP_DIR
}

function setup {
  local identifier=$1
  PROJECT_DIR=$(pwd)
  PROJECT_SBT=$PROJECT_DIR/sbt
  PROJECT_TMP_DIR=$(mktemp -d -t $identifier.XXXXXXXXXX.tmp)
}

function run {
  # Publish local dependencies when not in a master branch
  if [ "$TRAVIS_BRANCH" != "master" ]; then
    setup finatra

    dependency util
    dependency ostrich
    project_dependency scrooge scrooge-publish-local
    # See notes in Scrooge's Build.scala's scrooge-publish-local project.
    # sbt plugins can currently only be built using Scala 2.10.
    cd $PROJECT_TMP_DIR/scrooge; ./sbt ++2.10.6 scrooge-generator/publishLocal scrooge-sbt-plugin/publishLocal
    dependency finagle
    dependency twitter-server

    clean_up
  fi
}

run
